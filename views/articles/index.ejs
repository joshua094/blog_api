<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <div class="mb-4">
            <a href="/user/loginroute" class="btn btn-primary">Login</a>
            <a href="/user/signuproute" class="btn btn-secondary">Signup</a>

        </div>
        <a href="/articles/new" class="btn btn-success">New Article</a>

    <% articles.forEach(article => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4  class="card-title"><%- article.title %> </h4>
                <div class="card-subtitle text-muted mb-2">
                    <%- article.createdAt.toLocaleDateString() %> 
                </div>
                <div class="card-text mb-2"><%- article.description %> </div>
                <a href="articles/<%= article.slug %> " class="btn btn-primary">Read More</a>
                <form action="/articles/<%= article.id %>?_method=DELETE" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
   <% }) %>
    </div>
</body>
</html>